# JANGAN LUPA MANDI



# LAYAR
monitor=eDP-1, 1920x1080, 0x0, 1


# LAUCNH DEFAULT
exec-once = waybar
exec-once = kitty
exec-once = hyprpaper
exec-once = wl-paste --watch cliphist store 
exec-once = dunst -conf .config/dunst/dunstrc
exec-once = easyeffects --gapplication-service
exec-once = hypridle
# exec-once = sh ~/.config/hypr/scripts/nogaps.sh
# exec-once = swayidle -w timeout 300 'swaylock -f' timeout 600 'sleep' before-sleep 'swaylock -f' 

# BINDING
source = ~/.config/hypr/bind.conf

# ENV
env = XCURSOR_SIZE,2
env = XDG_SESSION_TYPE,wayland
env = XDG_CURRENT_DESKTOP,Hyprland
env = XDG_SESSION_DESKTOP,Hyprland


input {
    kb_layout = us
    kb_variant =
    kb_model =
    kb_options =
    kb_rules =
    numlock_by_default = true
    follow_mouse = 1
    touchpad {
        disable_while_typing = true
        natural_scroll = true
        disable_while_typing = true

    }
    sensitivity = 0 # -1.0 - 1.0, 0 means no modification.
}


misc {
    disable_hyprland_logo = true
    disable_splash_rendering = true
}


# BORDER DAN WINDOW 
general {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    gaps_in = 8
    gaps_out = 15
    border_size = 2
    no_border_on_floating = true
    layout = dwindle
}



# OPACITY DAN EFEK WINDOW
decoration {
    rounding = 10
    active_opacity = 0.76
    inactive_opacity = 0.8
    blur {
        enabled = true
        size = 2                # besar blur
        passes = 2               # jumlah proses blur
        brightness = 0.7
        contrast = 1.0
        vibrancy = 0.9        # sedikit warna
        popups = true
    }
    shadow {
        enabled= true
        ignore_window = true
        range = 30
        offset = 2 4
        render_power = 30
        color = 0xf9001824
    }
}

# ANIMASI BANG
animations {
    enabled = yes
    bezier = myZoom, 0.05, 1, 0, 1.05
    
    animation = windows, 1, 5, default,popin 80%
    animation = border, 1, 3, default
    animation = fade, myZoom
    animation = workspaces, 1, 5, myZoom
}



#LAYOUT BANG
dwindle {
    pseudotile = true # master switch for pseudotiling. Enabling is boun>
    preserve_split = true # you probably want this
}


master {
    new_status = master
    new_on_top = true
}

gestures {
    workspace_swipe = true
}

# BORDER BANG
general {
    col.active_border = rgb(fff000) rgb(ff1234) rgb(ff1234) rgb(fff000) 190deg
    col.inactive_border = rgba(44475aaa)
}

